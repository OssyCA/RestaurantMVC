@model RestaurantMVC.ViewModels.ManageMenuVM

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <h2 class="text-center mb-4 text-light fw-bold">
                <i class="fas fa-utensils me-2"></i>Hantera Meny
            </h2>

            <div class="card bg-dark border-secondary mb-4 shadow-lg">
                <div class="card-header bg-gradient text-light border-secondary">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2 text-success"></i>Skapa nytt Meny innehåll
                    </h4>
                </div>
                <div class="card-body bg-dark">
                    <partial name="_MenuItemForm" model="Model.NewMenuItem"
                             view-data='@(new ViewDataDictionary(ViewData) { ["FormAction"] = "CreateMenuItem" })' />
                </div>
            </div>

            @if (ViewBag.ValidationErrors != null)
            {
                <div class="alert alert-danger border-0 shadow-sm">
                    <h5 class="alert-heading">
                        <i class="fas fa-exclamation-triangle me-2"></i>Valideringsfel:
                    </h5>
                    <ul class="mb-0">
                        @foreach (var error in ViewBag.ValidationErrors)
                        {
                            <li><strong>@error.Field:</strong> @string.Join(", ", error.Errors)</li>
                        }
                    </ul>
                </div>
            }

            <div class="card bg-dark border-secondary shadow-lg">
                <div class="card-header bg-gradient text-light border-secondary">
                    <h4 class="mb-0">
                        <i class="fas fa-list me-2 text-info"></i>Befintliga Meny Items
                    </h4>
                </div>
                <div class="card-body bg-dark p-4">
                    <partial name="_FullMenu" model="Model.MenuItems" />
                </div>
            </div>
        </div>
    </div>
</div>