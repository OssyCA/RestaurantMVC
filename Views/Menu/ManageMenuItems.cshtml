@model RestaurantMVC.ViewModels.MenuItemVM
<div>
    <h2>Skapa nytt Meny innehåll</h2>
    <partial name="_MenuItemForm" model="Model"
             view-data='@(new ViewDataDictionary(ViewData) { ["FormAction"] = "CreateMenuItem" })' />


    @if (ViewBag.ValidationErrors != null)
    {
        <div class="alert alert-danger">
            <h4>Valideringsfel:</h4>
            <ul>
                @foreach (var error in ViewBag.ValidationErrors)
                {
                    <li><strong>@error.Field:</strong> @string.Join(", ", error.Errors)</li>
                }
            </ul>
        </div>
    }
</div>