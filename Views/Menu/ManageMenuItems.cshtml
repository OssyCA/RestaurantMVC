@using RestaurantMVC.ViewModels
@model RestaurantMVC.ViewModels.ManageMenuVM

<!-- Create menu item button -->
<div class="mb-4">
    <button class="btn btn-primary btn-lg" type="button" data-bs-toggle="collapse" data-bs-target="#createItem" aria-expanded="false" aria-controls="createItem">
        <i class="fas fa-plus-circle me-2"></i>Create New Menu Item
    </button>
</div>

<!-- Create item form -->
<div class="collapse mb-4" id="createItem">
    <div class="card bg-dark border-secondary shadow-lg">
        <div class="card-header bg-gradient text-light border-secondary">
            <h4 class="mb-0">
                <i class="fas fa-plus-circle me-2 text-success"></i>Create Menu Item
            </h4>
        </div>
        <div class="card-body bg-dark">
            @{
                ViewData["FormAction"] = "CreateMenuItem";
            }
            <partial name="_MenuItemForm" model="Model.NewMenuItem" />
        </div>
    </div>
</div>

<!-- Menu items table -->
<div class="card bg-dark border-secondary shadow-lg">
    <div class="card-header bg-gradient text-light border-secondary">
        <h4 class="mb-0">
            <i class="fas fa-utensils me-2"></i>Menu Items
        </h4>
    </div>
    <div class="card-body bg-dark p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0">
                <thead class="table-secondary">
                    <tr>
                        <th scope="col" class="text-center" style="width: 120px;">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col" class="text-center" style="width: 100px;">Price</th>
                        <th scope="col" class="text-center" style="width: 80px;">Popular</th>
                        <th scope="col" class="text-center" style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MenuItems)
                    {
                        <tr>
                            <td class="text-center align-middle">
                                <img src="@item.ImageUrl" class="rounded" alt="@item.Title"
                                     style="width: 80px; height: 60px; object-fit: cover;" />
                            </td>
                            <td class="align-middle">
                                <strong>@item.Title</strong>
                            </td>
                            <td class="align-middle">
                                <small class="text-muted">@item.Description</small>
                            </td>
                            <td class="text-center align-middle">
                                <span class="badge bg-success fs-6">@item.Price kr</span>
                            </td>
                            <td class="text-center align-middle">
                                @if (item.IsPopular)
                                {
                                    <i class="fas fa-star text-warning" title="Popular item">Yes</i>
                                }
                                else
                                {
                                    <i class="far fa-star text-muted" title="Regular item"></i>
                                }
                            </td>
                            <td class="text-center align-middle">
                                <div class="btn-group-vertical gap-1" role="group">
                                    <button class="btn btn-warning btn-sm" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#editForm-@item.Id" aria-expanded="false" aria-controls="editForm-@item.Id">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </button>
                                    <form asp-action="DeleteItem" asp-controller="Menu" asp-route-id="@item.Id" method="post"
                                          onsubmit="return confirm('Är du säker på att du vill ta bort @item.Title?')"
                                          class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm w-100">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>

                        <tr class="collapse" id="editForm-@item.Id">
                            <td colspan="6" class="p-0">
                                <div class="bg-secondary p-4">
                                    <div class="card bg-dark border-warning">
                                        <div class="card-header bg-warning text-dark">
                                            <h5 class="mb-0">
                                                <i class="fas fa-edit me-2"></i>Edit: @item.Title
                                            </h5>
                                        </div>
                                        <div class="card-body bg-dark">
                                            @{
                                                ViewData["FormAction"] = "Edit";
                                                var editModel = new MenuItemVM
                                                {
                                                    Id = item.Id,
                                                    Title = item.Title,
                                                    Description = item.Description,
                                                    IsPopular = item.IsPopular,
                                                    ImageUrl = item.ImageUrl,
                                                    Price = item.Price
                                                };
                                            }
                                            <partial name="_MenuItemForm" model="editModel" />
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.MenuItems.Any())
        {
            <div class="text-center p-5 text-muted">
                <i class="fas fa-utensils fa-3x mb-3"></i>
                <h5>No menu items found</h5>
                <p>Click "Create New Menu Item" to get started!</p>
            </div>
        }
    </div>
</div>