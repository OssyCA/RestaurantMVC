@model List<MenuItem>

<div class="container my-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-5 text-light mb-3">
            <i class="fas fa-utensils text-warning me-3"></i>
            Our Menu
            <i class="fas fa-utensils text-warning ms-3"></i>
        </h1>
        <p class="lead text-muted">Discover our carefully crafted dishes</p>
    </div>

    <!-- Menu Items -->
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card bg-dark text-light h-100 border-secondary shadow">

                        <div class="position-relative">
                            <div class="ratio ratio-4x3">
                                <img src="@item.ImageUrl"
                                     class="card-img-top rounded-top"
                                     alt="@item.Title"
                                     style="object-fit: cover;" />
                            </div>

                            @if (item.IsPopular)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star"></i> Popular
                                    </span>
                                </div>
                            }

                            <div class="position-absolute bottom-0 end-0 m-2">
                                <span class="badge bg-success fs-6">@item.Price kr</span>
                            </div>
                        </div>

           
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-warning mb-3">@item.Title</h5>

                     
                            <div class="mt-auto">
                                @if (ViewBag.SelectedId == item.Id)
                                {
                                    <button class="btn btn-outline-warning btn-sm w-100 mb-3"
                                            onclick="window.location.href='@Url.Action("Index")'"
                                            type="button">
                                        <i class="fas fa-eye-slash me-2"></i>Hide Description
                                    </button>
                                    <div class="card bg-secondary p-3 border-warning">
                                        <p class="card-text mb-0 text-light">@item.Description</p>
                                    </div>
                                }
                                else
                                {
                                    <a class="btn btn-outline-info btn-sm w-100"
                                       asp-action="Index"
                                       asp-route-selectedId="@item.Id">
                                        <i class="fas fa-eye me-2"></i>Show Description
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        
        <div class="text-center p-5">
            <div class="card bg-dark border-secondary">
                <div class="card-body">
                    <i class="fas fa-utensils fa-4x text-muted mb-3"></i>
                    <h4 class="text-light">No Menu Items Available</h4>
                    <p class="text-muted">Please check back later for our delicious offerings.</p>
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-warning btn-lg">
            <i class="fas fa-home me-2"></i>Back to Home
        </a>
    </div>
</div>