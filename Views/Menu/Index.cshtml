@model List<MenuItem>

<div class="container my-5">
    <h2 class="text-center mb-4 text-light">Sub Menu</h2>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card bg-dark text-light h-100 shadow-sm border-0">
                    <img src="@item.ImageUrl"
                         class="card-img-top"
                         alt="@item.Title"
                         style="height: 15em; object-fit: cover; border-radius: 0.5rem;" />

                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text fw-bold">Price: @item.Price</p>

                        <a class="btn btn-outline-info btn-sm shadow-none"
                           asp-action="Index"
                           asp-route-selectedId="@item.Id">
                            Show Description
                        </a>

                        @if (ViewBag.SelectedId == item.Id)
                        {
                            <p class="mt-3">@item.Description</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
