@model RestaurantMVC.ViewModels.MenuItemVM
<form asp-action="@ViewData["FormAction"]" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" />
    </div>
    <div>
        <label asp-for="IsPopular"></label>
        <input asp-for="IsPopular" type="checkbox" />
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>
    <button type="submit">
        Spara
    </button>
</form>