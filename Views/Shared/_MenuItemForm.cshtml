@model RestaurantMVC.ViewModels.MenuItemVM
<form asp-action="@ViewData["FormAction"]" asp-route-id="@Model.Id" method="post" asp-controller="Menu">
    @if (Model.Id > 0)
    {
        <input asp-for="Id" type="hidden" />
    }
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" />
    </div>
    <div>
        <label asp-for="IsPopular"></label>
        <input asp-for="IsPopular" type="checkbox" />
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>
    <button type="submit">
        Spara
    </button>
</form>