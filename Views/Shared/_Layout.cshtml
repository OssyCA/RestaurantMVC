@using RestaurantMVC.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant SYB</title>
    <meta name="description" content="Restaurant SYB i Stockholm erbjuder klassiska rätter och moderna smaker. Boka bord online eller upptäck vår meny. Öppet alla dagar 10–22.">
    <meta name="keywords" content="restaurang, boka bord, meny, mat, Stockholm, SYB">
    <meta name="author" content="Restaurant SYB">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantMVC.styles.css" asp-append-version="true" />
</head>
<body class="bg-custom-dark text-white">

    <header>
        <nav class="navbar navbar-expand-md border-danger navbar-dark bg-dark border-bottom box-shadow mb-4">
            
            <div class="container-fluid">
                <partial name="_SuccessErrorMessage"></partial>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SYB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Home")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Menu")" asp-controller="Menu" asp-action="Index">Meny</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Booking")" asp-controller="Booking" asp-action="Index">Bokning</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Admin")" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>

                    </ul>
                </div>
                @{
                    var hasAccessToken = Context.Request.Cookies.ContainsKey("accessToken");
                }
                @if (hasAccessToken)
                {
                    <form asp-controller="Employee" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i>Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Employee" asp-action="Login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-right"></i>Login
                    </a>
                }

            </div>
        </nav>
    </header>
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-5 ">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase">Restaurant SYB</h5>
                    <p>
                        Din restaurang i Stockholm. Klassiska rätter och moderna smaker.
                        Boka bord enkelt online eller ring oss direkt.
                    </p>
                </div>

                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase">Öppettider</h5>
                    <ul class="list-unstyled">
                        <li>Måndag–söndag: 10:00 – 22:00</li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase">Kontakt</h5>
                    <p>
                        <i class="fas fa-map-marker-alt me-2"></i> Storgatan 10, Stockholm<br>
                        <i class="fas fa-phone me-2"></i> 08-123 456 78<br>
                        <i class="fas fa-envelope me-2"></i> info@restaurantsyb.se
                    </p>
                    <div>
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-twitter fa-lg"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-secondary">
            <div class="text-center">
                <small>&copy; 2025 - Restaurant SYB | Alla rättigheter förbehållna</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
