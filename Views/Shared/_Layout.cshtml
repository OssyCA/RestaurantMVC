<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantMVC.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white">
    <header>
        <nav class="navbar navbar-expand-md border-danger navbar-dark bg-dark border-bottom box-shadow mb-4">
            
            <div class="container-fluid">
                <partial name="_SuccessErrorMessage"></partial>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RestaurantMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Menu" asp-action="Index">Meny</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Boking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                </div>
                @{
                    var hasAccessToken = Context.Request.Cookies.ContainsKey("accessToken");
                }
                @if (hasAccessToken)
                {
                    <form asp-controller="Employee" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i>Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Employee" asp-action="Login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-right"></i>Login
                    </a>
                }

            </div>
        </nav>
    </header>
    <div class="container" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-danger footer text-muted">
        <div class="container">
            &copy; 2025 - RestaurantMVC - Öppet 10-22
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
