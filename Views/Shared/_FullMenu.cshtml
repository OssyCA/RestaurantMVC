@model List<MenuItem>
<div class="container text-center">
    <h2>Syb Menu</h2>
    @foreach (var item in Model)
    {
        <div class="mb-4">
            <h4>@item.Title</h4>
            <img src="@item.ImageUrl" class="img-fluid w-25" alt="@item.Title" style="width: 2.5em; height: 15em; object-fit: cover; border-radius: 8px;" />
            <p>PRICE: @item.Price</p>

            
        </div>
        <div>
            @if (ViewBag.ShowDescriptionBtn == true)
            {
                <a class="btn btn-outline-primary shadow-none" asp-action="Index" asp-route-selectedId="@item.Id"> Show </a>
                @if (ViewBag.SelectedId == item.Id)
                {
                    <p>@item.Description</p>
                }
            }
            @if (ViewBag.ShowEditButtons == true)
            {
                <a class="btn btn-warning mb-2" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fas fa-edit"></i> Redigera
                </a>
            }

            @if (ViewBag.ShowDeleteButtons == true)
            {
                <form asp-action="DeleteItem" asp-controller="Menu" asp-route-id="@item.Id" method="post"
                      onsubmit="return confirm('Är du säker på att du vill ta bort @item.Title?')"
                      class="d-inline w-100">
                    <button type="submit" class="btn btn-danger mb-2 w-100">
                        <i class="fas fa-trash"></i> Ta bort
                    </button>
                </form>
            }
        </div>
    }
</div>