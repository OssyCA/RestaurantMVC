@model RestaurantMVC.ViewModels.UpdateBookingVM

<div class="container">
    <h2>Edit Booking</h2>

    <form asp-action="EditBooking" asp-route-id="@Model.BookingId" method="post">
        <input asp-for="BookingId" type="hidden" />
        <input asp-for="CustomerEmail" type="hidden" />
        <input asp-for="CustomerPhone" type="hidden" />

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="CustomerName" class="form-label text-light">Customer Name</label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label text-light">Email</label>
                    <input value="@Model.CustomerEmail" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label text-light">Phone</label>
                    <input value="@Model.CustomerPhone" class="form-control" readonly />
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="TableId" class="form-label text-light">Table</label>
                    <select asp-for="TableId" class="form-select">
                        @foreach (var table in Model.AvailableTables)
                        {
                            <option value="@table.Id">Table @table.TableNumber Capacity: @table.Capacity</option>
                        }
                    </select>
                    <span asp-validation-for="TableId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartAt" class="form-label text-light">Start Time</label>

                    <input asp-for="StartAt"
                           type="datetime-local"
                           class="form-control"
                           value="@Model.StartAt.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="StartAt" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label text-light">Guests</label>
                    <input asp-for="Amount" type="number" min="1" max="20" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="ManageBookings" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}