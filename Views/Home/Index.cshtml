@model List<MenuItem>

<div class="container my-5">

    <div class="text-center mb-5">
        <h1 class="display-4 text-light mb-4">Välkommen till Restaurang SYB</h1>
        <div class="lead text-light mx-auto" style="max-width: 800px;">
            At Restaurant SYB, classic culinary culture meets modern flavors in a warm and inviting atmosphere.
            Here, it's not just about the food, but also about community.
            <strong class="text-warning">Welcome in and let us take care of the rest!</strong>
        </div>
    </div>

    <div class="card bg-dark border-secondary shadow-lg mb-5">
        <div class="card-header bg-gradient text-light border-secondary text-center">
            <h2 class="mb-0">
                <i class="fas fa-star text-warning me-2"></i>Populära Rätter
                <i class="fas fa-star text-warning ms-2"></i>
            </h2>
        </div>
        <div class="card-body bg-dark">
            @if (Model != null && Model.Any())
            {
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card bg-secondary text-light h-100 shadow-sm border-0 popular-dish-card">
                                <div class="position-relative">
                                    <img src="@item.ImageUrl"
                                         class="card-img-top"
                                         style="height: 220px; object-fit: cover;"
                                         alt="@item.Title" />
                                    <div class="position-absolute top-0 end-0 m-2">
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-star"></i> Populär
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-warning mb-3">@item.Title</h5>
                                    <p class="card-text flex-grow-1 text-light-emphasis">@item.Description</p>
                                    <div class="mt-auto">
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted">
                    <i class="fas fa-utensils fa-3x mb-3"></i>
                    <h5>Inga populära rätter hittades</h5>
                    <p>Kolla in vår <a asp-controller="Menu" asp-action="Index" class="text-warning">kompletta meny</a> istället!</p>
                </div>
            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card bg-dark text-light border-secondary h-100 shadow-lg">
                <div class="card-body text-center">
                    <i class="fas fa-utensils fa-3x text-warning mb-3"></i>
                    <h4 class="card-title">Utforska Vår Meny</h4>
                    <p class="card-text">Upptäck alla våra läckra rätter från klassiska favoriter till moderna kreationer.</p>
                    <a asp-controller="Menu" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-book-open me-2"></i>Se Hela Menyn
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-dark text-light border-secondary h-100 shadow-lg">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x text-warning mb-3"></i>
                    <h4 class="card-title">Boka Bord</h4>
                    <p class="card-text">Reservera ditt bord idag för en fantastisk matupplevelse hos Restaurang SYB.</p>
                    <a asp-controller="Booking" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-calendar-check me-2"></i>Boka Nu
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>