@model List<MenuItem>

<div class="container my-5">

    <section class="text-center mb-5">
        <h1 class="display-4 text-light mb-4">Välkommen till Restaurang SYB</h1>
        <p class="lead text-light mx-auto" style="max-width: 800px;">
            At Restaurant SYB, classic culinary culture meets modern flavors in a warm and inviting atmosphere.
            Here, it's not just about the food, but also about community.
            <strong class="text-warning">Welcome in and let us take care of the rest!</strong>
        </p>
    </section>

    <section class="card-body bg-dark" aria-labelledby="popular-dishes">
        <h2 id="popular-dishes" class="visually-hidden">Popular Dishes</h2>
        @if (Model?.Any() == true)
        {
            <div id="popularDishesCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
                <div class="carousel-inner">
                    @foreach (var (item, index) in Model.Select((dish, i) => (dish, i)))
                    {
                        <div class="carousel-item @(index == 0 ? "active" : "")">
                            <div class="d-flex justify-content-center px-3 px-md-5">
                                <article class="card bg-secondary text-light shadow border-0 w-100" style="max-width: 25rem;">
                                    <div class="position-relative">
                                        <img src="@item.ImageUrl"
                                             class="card-img-top"
                                             style="height: 15.625rem; object-fit: cover;"
                                             alt="@item.Title" />
                                        <span class="position-absolute top-0 end-0 m-3 badge bg-warning text-dark fs-6 rounded-pill">
                                            <i class="fas fa-star me-1"></i>Popular
                                        </span>
                                    </div>
                                    <div class="card-body">
                                        <h3 class="card-title text-warning mb-3">@item.Title</h3>
                                        <p class="card-text text-light">@item.Description</p>
                                    </div>
                                </article>
                            </div>
                        </div>
                    }
                </div>

                @if (Model.Count() > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#popularDishesCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#popularDishesCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="visually-hidden">Next</span>
                    </button>

                    <div class="carousel-indicators">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <button type="button"
                                    data-bs-target="#popularDishesCarousel"
                                    data-bs-slide-to="@i"
                                    class="@(i == 0 ? "active" : "")"
                                    aria-label="Slide @(i + 1)">
                            </button>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="fas fa-utensils display-1 mb-3 opacity-50"></i>
                <h3 class="mb-3">No popular dishes found</h3>
                <p class="mb-3">Check out our full menu instead</p>
                <a asp-controller="Menu" asp-action="Index" class="btn btn-outline-warning">
                    <i class="fas fa-book-open me-2"></i>View Full Menu
                </a>
            </div>
        }
    </section>

    <section class="row g-4" aria-labelledby="quick-actions">
        <h2 id="quick-actions" class="visually-hidden">Quick Actions</h2>

        <div class="col-md-6">
            <article class="card bg-dark text-light border-secondary h-100 shadow-lg">
                <div class="card-body text-center">
                    <i class="fas fa-utensils fa-3x text-warning mb-3"></i>
                    <h3 class="card-title">Look at our Menu</h3>
                    <p class="card-text">Discover the menu</p>
                    <a asp-controller="Menu" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-book-open me-2"></i>Full Menu
                    </a>
                </div>
            </article>
        </div>

        <div class="col-md-6">
            <article class="card bg-dark text-light border-secondary h-100 shadow-lg">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x text-warning mb-3"></i>
                    <h3 class="card-title">Book table</h3>
                    <p class="card-text">Reserve table at Restaurang SYB.</p>
                    <a asp-controller="Booking" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-calendar-check me-2"></i> Book now
                    </a>
                </div>
            </article>
        </div>
    </section>

</div>